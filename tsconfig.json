{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES2020",

    "outDir": "dist",
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/**/src", "packages/**/test"],
}